<%= form_for tour, url: url, method: method do |f| %>
  <div class="row" style="justify-content: center;">
    <div class="col-md-6 col-md-offset-3">
      <%= render "shared/error_messages", resource: tour %>

      <div class="form-group">
        Title: <%= f.text_field :title, class: "form-control"%><br/>
      </div>
      <div class="form-group">
        Image: <%= f.file_field :image, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Price: <%= f.text_field :price, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Description: <%= f.text_area :description, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Tour type:
         <%= f.select(:tour_type, [["fixed tour", "fixed_tour"], ["military tour", "military_tour"]],
         class: "form-control") %>
      </div>
      <div class="form-group">
        Start date: <%= f.date_field :start_date, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        End date: <%= f.date_field :end_date, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Time in day: <%= f.text_field :time_in_day, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        Limit member: <%= f.text_field :limit_member, class: "form-control" %><br/>
      </div>
      <div class="form-group">
        <% if tour.persisted? %>
          <%= f.submit "Update", class: "btn btn-outline-success" %>
        <% else %>
          <%= f.submit "Create", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
